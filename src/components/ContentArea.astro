---
import DynamicComponent from "@src/components/DynamicComponent.astro";
import clsx from "clsx";

const { textarea } = Astro.props;
---

<div class={clsx("w-100", "py-4")}>
  <div class="container-lg border rounded p-4 container-colors">
    {textarea.map((blok: any) => <DynamicComponent blok={blok} />)}
  </div>
</div>

<style lang="scss">
  @import "@styles/index.scss";
  .container-colors {
    background-color: $color-grey-100;
    border-color: $color-brand-secondary-200 !important;
  }
</style>
